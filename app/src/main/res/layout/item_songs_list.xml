<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_list_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:weightSum="3"
        android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/item_list_layout_two"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="2dp"
           android:layout_weight="0">

           <ImageView
               android:id="@+id/icn_play_songlist"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="?android:selectableItemBackground"
               android:src="@drawable/icn_play_songlist"
               />

       </LinearLayout>

        <LinearLayout
            android:id="@+id/item_list_layout_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txt_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="That's the way i like"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txt_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bruno Mars"
                android:textSize="10sp"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:40"
                android:layout_weight="0"
                android:gravity="bottom"
                android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>